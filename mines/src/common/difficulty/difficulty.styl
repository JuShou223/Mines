.translate-enter
  transform: scale(0)
  &.translate-enter-active
    transition: transform 0.5s ease-in-out
    transform: scale(1)
.difficulty_container
  width: 100%
  height 100%
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  .mask2
    background-color: rgb(0,0,0)
    opacity 0.5
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  .box
    background-color: #e2e9f4
    overflow hidden
    border-radius: 10px
    text-align center
    padding: 20px
    box-shadow: 0 0 10px #888888
    margin 200px 30px
    .header1
      font-size 50px
      font-family: text
      text-align center
      margin-bottom 15px
    .btn2
      width: 100px
      height 45px
      margin 20px auto
      font-size 24px
      background: linear-gradient(to bottom , #d6e0ec, #c6d1e5)
      font-weight: 800
      border: 2px solid #6a84bc
      border-radius: 5px
      box-shadow: 5px 5px 5px #888