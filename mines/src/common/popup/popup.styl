@font-face {
  font-family: text;
  src: url(../../assets/font/huayun.ttf);
}
.translate-enter
  transform: scale(0)
  &.translate-enter-active
    transition: transform 0.5s ease-in-out
    transform: scale(1)
.notPhone
	text-align center
	position absolute
	top 50%
	left 50%
	transform: translate(-50%,-50%)
	width: 500px
	height: 100px
	background-color: #c8d3e0
	border-radius: 10px
	overflow hidden
	box-shadow: 0 0 10px #888888
	.sugesstion
		line-height 100px
		font-weight bold
	.duration
		position absolute
		bottom 20px
		right 20px
.popup_container
  width 100%
  height 100%
  position fixed
  top: 0
  left 0
  bottom 0
  right 0
	.popUp
		background-color: #c8d3e0
		border-radius: 10px
		overflow hidden
		padding: 20px
		box-shadow: 0 0 10px #888888
		margin 170px 30px
		.warning
			font-size 20px
			width: 200px
			margin 0 auto	
		.title
			font-size 50px
			font-family: text
			text-align center
			margin-bottom 15px
		.middle
			padding: 10px 30px
			background-color: #e2e9f4
			border-radius: 10px
			overflow hidden
			.content
				font-size 20px
				overflow hidden
				line-height 30px
				height 30px
				.name
					background-image:-webkit-linear-gradient(bottom, #0f0c29, #302b63, #24243e);
					-webkit-background-clip:text;
					-webkit-text-fill-color:transparent;
					width 80px
					text-align justify
					float left
					overflow hidden
				.name:after
					content: ''
					width: 100%
					display inline-block
					height 0
				.value
					font-weight bold
					text-align center
					background-image:-webkit-linear-gradient(bottom,#1488cc, #2b32b2);
					-webkit-background-clip:text;
					-webkit-text-fill-color:transparent;
					float right 
					width: 130px;
		.bottom
			overflow hidden
			.btn2
				width: 100px
				height 45px
				font-size 24px
				margin 20px 10px 10px 10px
				background: linear-gradient(to bottom , #d6e0ec, #c6d1e5)
				font-weight: 800
				border: 2px solid #6a84bc;
				border-radius: 5px
				box-shadow: 5px 5px 5px #888
				.text
					background-image:-webkit-linear-gradient(bottom, #000000, #434343);
					-webkit-background-clip:text;
					-webkit-text-fill-color:transparent;

				