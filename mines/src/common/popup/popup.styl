.popup_container
  width 100%
  height 100%
  position fixed
  top: 0
  left 0
  bottom 0
  right 0
  .popUp
    margin: 200px 30px
		.header
			font-size 50px
			font-family: text
			text-align center
			margin-bottom 15px
		.middle
			padding: 10px 30px
			background-color: #e2e9f4
			border-radius: 10px
			overflow hidden
			.content
				font-size 20px
				overflow hidden
				.name
					background-image:-webkit-linear-gradient(bottom, #0f0c29, #302b63, #24243e);
					-webkit-background-clip:text;
					-webkit-text-fill-color:transparent;
					width 80px
					text-align justify
					float left
					overflow hidden
					height 30px
					line-height 30px
				.name:after
					content: ''
					width: 100%
					display inline-block
					height 0
		.bottom
			overflow hidden
			.btn2
				width: 100px
				height 45px
				text-align center
				font-size 24px
				line-height 45px
				margin 20px 10px 10px 10px
				background: linear-gradient(to bottom , #d6e0ec, #c6d1e5)
				font-weight: 800
				border: 2px solid #6a84bc;
				border-radius: 5px
				box-shadow: 5px 5px 5px #888
				.text
					background-image:-webkit-linear-gradient(bottom, #000000, #434343);
					-webkit-background-clip:text;
					-webkit-text-fill-color:transparent;

				