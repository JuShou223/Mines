.gameplay_container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color: #e2e9f4
  .gheader
    background: linear-gradient(to top, #d3cce3, #e9e4f0)
    height  40px
    text-align center
    font-size 24px
    font-weight bold
    line-height 40px
    .header_title
      background-image:-webkit-linear-gradient(bottom, #000000, #434343);
      -webkit-background-clip:text;
      -webkit-text-fill-color:transparent;
  .content
    margin 10px
    .title
      height: 30px
      font-size 20px
      line-height 30px
      font-weight bold
      background-image:-webkit-linear-gradient(bottom,#1488cc, #2b32b2);
      -webkit-background-clip:text;
      -webkit-text-fill-color:transparent;
    .desc
      letter-spacing 2px
      background #eee
      padding 10px
      line-height 20px
      
