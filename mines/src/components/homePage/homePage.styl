.btn
    border: 1px solid #fff
    outline: none 
    vertical-align middle
    width: 10.666667rem /* 400/37.5 */
    height 3.2rem /* 120/37.5 */
    border-radius: .533333rem /* 20/37.5 */
    margin 0 auto 2.666667rem /* 100/37.5 */
    display: block
    font-weight bold
    letter-spacing: 2px
    box-shadow: 2px 5px 5px #000
    font-size 1.066667rem /* 40/37.5 */
    background: linear-gradient(to right, #29323c, #485563); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
.text
    background-image:-webkit-linear-gradient(bottom,#c9d6ff, #e2e2e2); 
    -webkit-background-clip:text; 
    -webkit-text-fill-color:transparent;
.home_container
    width: 100%
    height: 100% 
    .header
        background: linear-gradient(to top, #928DAB, #1F1C2C); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        text-align center
        line-height 4.266667rem /* 160/37.5 */
        height 4.266667rem /* 160/37.5 */
        letter-spacing: .533333rem /* 20/37.5 */
        font-size 1.333333rem /* 50/37.5 */
        font-weight bold
        .title
            margin-left .266667rem /* 10/37.5 */ 
            display: inline-block
        .logo
            width: 40px
            height: 40px
            margin-top: -8px
            vertical-align: middle
    .home_content
        position: absolute;
        top: 50%;
        left 50%;
        transform: translate(-50%,-50%)
    .bottom1
        border-top: 2px solid #888
        position absolute
        bottom: 0
        left 0
        width: 100%
        height 5.333333rem /* 200/37.5 */
        background: linear-gradient(to top, #1f1c2c, #928dab); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        .minepic
            width: 5.333333rem /* 200/37.5 */
            height 5.333333rem /* 200/37.5 */
            margin-top -2.4rem /* 90/37.5 */