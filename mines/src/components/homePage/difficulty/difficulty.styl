@keyframes rotate {
    100% {
        transform:  rotateX(360deg);
    }
}
.translate-enter
  transform: translate3d(100%,0,0)
  &.translate-enter-active
    transition: transform .5s
    transform: translate3d(0,0,0)
.difficulty{
	height: 100%;
	width: 100%;
	position: fixed;
	top: 0;	
	left: 0;
	bottom: 0;
	right: 0;
}
.difficulty .container{
	width: 100%;
	height: 100%;
	position: relative;
}
.contain {
	padding-top: 18.666667rem /* 700/37.5 */;
  position: relative;
  perspective: 250rem /* 1600/37.5 */;
  // animation: rotate-frame 30s linear infinite;

}
.contain .box {
    // animation: rotate 6s ease 0s normal none infinite running ;
    height: 3.733333rem /* 140/37.5 */;
    margin: 0 auto;
    position: relative;
    transform-style: preserve-3d;
    // width: 18.666667rem /* 700/37.5 */;
		width: 100%;


}

.box .face {
		border: .026667rem /* 1/37.5 */ solid  #888
    backface-visibility: hidden;
    background: #BBD2C5;  /* fallback for old browsers */
		background: -webkit-linear-gradient(to right, #000000, #434343);  /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(to right, #000000, #434343); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    height: 3.733333rem /* 140/37.5 */;
    opacity: 0.8;
    position: absolute;
    // width: 18.666667rem /* 700/37.5 */;
		width: 100%;
}
.box .one {
    transform: translateZ(3.233162rem);
}
.box .two {
    transform: rotateX(-60deg) translateZ(3.233162rem)
}
.box .three{
    transform: rotateX(60deg) translateZ(3.233162rem)
}
.box .four {
    transform: rotateX(120deg) translateZ(3.233162rem);
}
.box .five{
	transform: rotateX(-120deg) translateZ(3.233162rem);
	}
.box .six {
    transform: rotateX(180deg) translateZ(3.233162rem)
}
.face .text{
	background-image:-webkit-linear-gradient(bottom,#c0c0aa, #1cefff); 
  -webkit-background-clip:text; 
  -webkit-text-fill-color:transparent;
}
.face .level{
	margin-top: .266667rem /* 10/37.5 */
	margin-bottom .266667rem /* 10/37.5 */
	text-align: center;
	font-weight: bold
	font-size 1.066667rem /* 40/37.5 */
	letter-spacing: .533333rem /* 20/37.5 */
}
.face .des{
	text-align center
	font-weight: bold
	letter-spacing: .133333rem /* 5/37.5 */
	font-size .8rem /* 30/37.5 */
	white-space: normal
	
}
.mask{
		position: absolute
		background: linear-gradient(to right, #ada996, #f2f2f2, #dbdbdb, #eaeaea); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
		// opacity: 0.5;
    width: 100%;
    height 100%;
}
.difficulty .container .side{
	height: 8.053333rem /* 302/37.5 */;
	width: 2.666667rem /* 100/37.5 */;
	position: absolute;
	top: 16.633333rem /* 620/37.5 */;
	overflow hidden;
}
.side.left{
	box-shadow: 2px 0px 2px #888;
	background: linear-gradient(to right , #EAEAEA, #DBDBDB, #F2F2F2, #ADA996); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	left: 0;
	border-radius: 0 /* 20/37.5 */ .266667rem /* 10/37.5 */ .266667rem /* 10/37.5 */ 0 /* 20/37.5 */;
}
