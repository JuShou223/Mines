@font-face {
    font-family: numbers;
    src: url(../../assets/DS-DIGIB.TTF);
}
.play_container
    width: 100%
    height 100%
    background: linear-gradient(to bottom, #232526, #414345); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    .header
        position relative
        // text-align center
        height 2.933333rem /* 110/37.5 */
        background: linear-gradient(to top, #d3cce3, #e9e4f0); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        .home_btn
            position: absolute
            top: 0
            left 0
            margin .266667rem /* 10/37.5 */ 0 0 .266667rem /* 10/37.5 */
            width: 2.4rem /* 90/37.5 */
            height 2.4rem /* 90/37.5 */
        .counter
            margin-top .266667rem /* 10/37.5 */
            display inline-block
            float right
            .icon 
                width: 1.866667rem /* 70/37.5 */
                height 1.866667rem /* 70/37.5 */
                vertical-align: middle
                margin 0 .266667rem /* 10/37.5 */
            .show_time
                background: linear-gradient(to right, #000000, #434343);
                font-family: numbers;
                display inline-block
                color: #fff
                text-align center
                border-radius: .266667rem /* 10/37.5 */
                line-height 2.4rem /* 90/37.5 */
                // margin-top .266667rem /* 10/37.5 */    
                font-size 1.6rem /* 60/37.5 */
                box-shadow: 0 0 5px #888;
                width: 8rem /* 300/37.5 */
                height: 2.375rem
                vertical-align: middle
