.row{
    overflow hidden
    display: flex
    // height 40px
    box-sizing: border-box
}

.map{
    position: absolute
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%)
    background: radial-gradient( #1e9600, #fff200)
    border-radius: 5px;
    overflow hidden
}
.grid{
    flex: 1
    border-radius: 5px;
    overflow hidden
    position relative
    text-align center
    background-size cover
    background-image url(../../assets/closegrid.png)
    margin 1px
}

.grid.open
{
    background: linear-gradient(to right, #d3cce3, #e2e2e2, #d3cce3);

}
.mine{
    width: 70%
    height 70%
    vertical-align: middle
    margin .266667rem /* 10/37.5 */ auto 
}
.imask{
    position: absolute
    background-color: rgb(0,0,0)
    opacity 0.4
    width: 100%;
    height: 100%;
}